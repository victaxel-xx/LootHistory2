
@{
    ViewBag.Title = "Guild";
}
@model LootHistory2.Models.Guild
<h2>@ViewBag.Title</h2>
<h4>@ViewBag.Message</h4>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th>Raids</th>
      <th>Loot</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model.Characters)
    {
        <tr>
          <td class="@WowApiHandler.ClassColors.CColors[item.Class]"><a href="#"></a>@item.Name-@item.Realm</td>
          <td>@item.Level</td>
          <td>0</td>
          <td>0</td>
        </tr>
    }
  </tbody>
</table>
